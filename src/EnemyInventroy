using System;

namespace TEZXANDVENTURE
{
    public class AddEnemyItem
    {
        public string? Name { get; set; }
        public int Quantity { get; set; }
    }

    public class AddEnemyWeapon
    {
        public string? Name { get; set; }
        public bool TwoHanded { get; set; }
        public int BleedDamage { get; set; }
        public int Damage { get; set; }
        public int Quantity { get; set; }
    }

    public class AddEnemySpell
    {
        public string? Name { get; set; }
        public int Damage { get; set; }
        public int FPCost { get; set; }
        public int Quantity { get; set; }
    }

    public class AddEnemyAmmo
    {
        public string? Name { get; set; }
        public int Damage { get; set; }
        public int Quantity { get; set; }
    }
    public class EnemyInventory
    {
        private List<AddEnemyItem> items;
        private List<AddEnemyWeapon> weapons;
        private List<AddEnemySpell> spells;
        private List<AddEnemyAmmo> ammos;

        public EnemyInventory()
        {
            items = new List<AddEnemyItem>();
            weapons = new List<AddEnemyWeapon>();
            spells = new List<AddEnemySpell>();
            ammos = new List<AddEnemyAmmo>();
        }

        public void AddItem(AddEnemyItem item)
        {
            items.Add(item);
        }
        public void AddWeapon(AddEnemyWeapon weapon)
        {
            weapons.Add(weapon);
        }
        public void AddSpell(AddEnemySpell spell)
        {
            spells.Add(spell);
        }
        public void AddAmmo(AddEnemyAmmo ammo)
        {
            ammos.Add(ammo);
        }

        public void RemoveItem(AddEnemyItem item)
        {
            items.Remove(item);
        }
        public void RemoveWeapon(AddEnemyWeapon weapon)
        {
            weapons.Remove(weapon);
        }
        public void RemoveSpell(AddEnemySpell spell)
        {
            spells.Remove(spell);
        }
        public void RemoveAmmo(AddEnemyAmmo ammo)
        {
            ammos.Remove(ammo);
        }

    }
}